<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
				"http://mybatis.org/dtd/mybatis-3-config.dtd">
				
<configuration>
	<!-- mybatis 활동 방식 설정 -->
	<!-- 
		caseEnabled : 같은 질의명령이라면 캐싱 기능을 사용 여부를 결정하는 속성
		
		useGeneratedKeys : 생성키에 대한 JDBC 지원을 허용
							드라이버마다 조금 다르게 작동한다.
		
		defaultExecutorType : 디폴트 실행자 설정
								REUSE	: PreparedStatement 를 재사용
								SIMPLE	: 특별히 하는 것이 없다.
								BATCH	: 구문을 재사용하고 수정을 배치 처리.
	 -->
	 <settings>
		 <setting name="cacheEnabled" value="false" />
		 <setting name="useGeneratedKeys" value="true" />
		 <setting name="defaultExecutorType" value="REUSE" />
	 </settings>
	 
	
	<typeAliases>
	 	<typeAlias alias="mVO" type="com.ex1.yj.vo.MemberVO"/>
	 	<typeAlias alias="bVO" type="com.ex1.yj.vo.BoardVO"/>
	</typeAliases>

	<mappers>
		<mapper resource="com/ex1/yj/sql/MemberSQL.xml"/>
		<mapper resource="com/ex1/yj/sql/BoardSQL.xml"/>
	</mappers>

</configuration>
